<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/mps010">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/mps010"
        app:cardElevation="@dimen/mps010">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPoster"
                android:layout_width="@dimen/mps150"
                android:layout_height="@dimen/mps150"
                android:src="@drawable/image04"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:contentDescription="imgPoster"/>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mps006"
                tools:text="@string/title"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/rubik_medium"
                android:textSize="@dimen/ts14"
                android:singleLine="true"
                android:layout_marginStart="@dimen/mps006"
                android:layout_marginEnd="@dimen/mps006"/>

            <TextView
                android:id="@+id/txtSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mps006"
                tools:text="@string/title"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/rubik_light"
                android:textSize="@dimen/ts12"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/mps006"
                android:layout_marginStart="@dimen/mps006"
                android:layout_marginBottom="@dimen/mps010"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>